script/source = "extends ProgressBar


func _ready() -> void :
	Mining.ref.mining_started.connect(_on_mining_started)
	Mining.ref.mining_stopped.connect(_on_mining_stopped)
	Mining.ref.mining_progressed.connect(_on_mining_progressed)
	Mining.ref.mining_cycle_completed.connect(_on_cycle_completed)


func _on_mining_started(duration : float) -> void : 
	max_value = duration


func _on_mining_stopped() -> void : 
	value = 0.0


func _on_mining_progressed(_value : float) -> void : 
	var from : float = 0.0 if value == max_value else value
	var tween : Tween = create_tween()
	tween.tween_property(self, \"value\", _value, 0.3).from(from).set_trans(Tween.TRANS_CIRC)


func _on_cycle_completed(_ore_vein : OreVein) -> void : 
	var tween : Tween = create_tween()
	tween.tween_property(self, \"value\", max_value, 0.3).set_trans(Tween.TRANS_CIRC)
"

